<div class="row mb-3">
    <div class="col-12 col-md-1">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus"></i>&nbsp;Tambah
        </a>
    </div>
    <div class="col-12 col-md-8">
        <div class="input-group">
            <input id="cari" type="text" class="form-control" placeholder="Cari">
            <div class="input-group-append">
                <button class="btn btn-primary" type="button">
                    <i class="fa fa-search"></i>&nbsp;Cari
                </button>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-3">
        <div class="input-group">
            <select class="form-control" id="filter">
                <option value="all">Semua Kategori</option>
                <option value="Tahun">Tahun</option>
                <option value="Prodi">Prodi</option>
                <option value="Judul">Judul</option>
            </select>
            <div class="input-group-append">
                <button class="btn btn-primary" type="button">
                    <i class="fa fa-filter"></i>&nbsp;Filter
                </button>
            </div>
        </div>
    </div>
</div>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["SuccessMessage"]
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["ErrorMessage"]
    </div>
}
<div style="overflow-x: auto; width: 100%;">
    <table id="myTable" class="table table-hover grid scrollstyle text-center" width="100%">
        <thead>
        <tr>
            <th>
                Nama Kegiatan
            </th>
            <th>
                Masa Pelaksanaan
            </th>
            <th>
                Bukti Pendukung
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Tanggal Input
            </th>
            <th>
                Tanggal Edit
            </th>
            <th>
                Surat Tugas
            </th>
            <th>
                Edit By
            </th>
            <th>
                Input By
            </th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Namakegiatan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Masapelaksanaan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Namafile)
            </td>
            <td>
                @if(item.Status == 0)
                {
                    <span>belum diajukan</span>
                }
                else if(item.Status == 1)
                {
                    <span>Menunggu Konfirmasi</span>
                }
                else if(item.Status == 2)
                {
                    <span>Diterima</span>
                }
                else if(item.Status == 3)
                {
                    <span>Ditolak</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inputdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editdate)
            </td>
            <td>
                @if(item.Surattugas == null)
                {
                   <div>Belum ada surat Tugas</div>
                }
                else
                {
                   <a asp-action="Download" asp-route-fileName="@item.Namafilesurat">@item.Namafilesurat</a>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditbyNavigation.Nama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InputbyNavigation.Nama)
            </td>
            <td>
                @if (item.Status == 0)
                {
                            <button class="btn btn-sm btn-success kirim-button" data-id="@item.Id">
                                <i class="fa fa-paper-plane"></i>
                            </button>
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                <i class="fa fa-pencil-square-o"></i>
                            </a>
                            <a class="btn btn-sm btn-info btn-info-modal" asp-action="Details" asp-route-id="@item.Id" title="Detail">
                                <i class="fa fa-info-circle"></i>
                            </a>
                            <a class="btn btn-sm btn-danger delete-button" asp-action="Delete" asp-route-id="@item.Id" title="Hapus">
                                <i class="fa fa-trash-o"></i>
                            </a>
                }
                else
                {
                            <a class="btn btn-sm btn-info btn-info-modal" asp-action="Details" asp-route-id="@item.Id" title="Detail">
                                <i class="fa fa-info-circle"></i>
                            </a>
                }             
           </td>
        </tr>
}
    </tbody>
</table>
</div>

<script>
    // Fungsi untuk menghitung total data dalam tabel
    function updateTotalData() {
        var totalDataElement = document.getElementById("totalData");
        var table = document.getElementById("myTable"); // Ganti "myTable" dengan id tabel yang sesuai
        var rowCount = table.rows.length - 1; // Mengurangi 1 untuk mengabaikan baris header

        totalDataElement.textContent = rowCount;
    }

    function searchTable() {
        var input, filter, table, tr, td, i, j, txtValue;
        input = document.getElementById("cari");
        filter = input.value.toUpperCase();
        table = document.getElementById("myTable");
        tr = table.getElementsByTagName("tr");

        for (i = 1; i < tr.length; i++) { // Mulai dari 1 untuk menghindari baris header
            var display = false;
            for (j = 0; j < tr[i].cells.length; j++) {
                td = tr[i].cells[j];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        display = true;
                        break;
                    }
                }
            }
            if (display) {
                tr[i].style.display = "";
            } else {
                tr[i].style.display = "none";
            }
        }
    }
    $(document).ready(function () {
        // Initialize DataTable
        var table = $('#myTable').DataTable({
            "pageLength": 10,
            "lengthMenu": [10, 25, 50, 75, 100],
            "searching": false,
            "ordering": false,
        });

        // Call the updateTotalData function whenever the table is drawn
        table.on('draw', function () {
            updateTotalData();
        });
    });

    // Panggil fungsi saat halaman dimuat
    window.addEventListener('load', updateTotalData);

    // Panggil fungsi pencarian saat input berubah
    var searchInput = document.getElementById("cari");
    searchInput.addEventListener("input", searchTable);

    $(document).ready(function () {
        $(".alert").on("click", ".close", function (e) {
            $(this).parent().hide();
        });

        $(".kirim-button").click(function () {
            var anggotaId = $(this).data("id");
            console.log(anggotaId);

            Swal.fire({
                title: "Kirim Surat?",
                text: "Apakah Anda yakin ingin mengirim surat ini?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Ya, Kirim!",
                cancelButtonText: "Batal"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/Surattugas/KirimConfirm/" + anggotaId,
                        type: "POST",
                        success: function (data) {
                            if (data.success) {
                                Swal.fire("Sukses!", data.message, "success");
                                location.reload();
                            } else {
                                Swal.fire("Gagal!", data.message, "error");
                            }
                        },
                        error: function () {
                            Swal.fire("Error!", "Terjadi kesalahan saat menghapus Laptop.", "error");
                        }
                    });
                }
            });
        });

    });
    $(document).ready(function () {
        $(".alert").on("click", ".close", function (e) {
            $(this).parent().hide();
        });
    });

</script>
