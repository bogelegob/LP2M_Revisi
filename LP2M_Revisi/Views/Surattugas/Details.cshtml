            border-radius: 0
        }

    .tl-content p:last-child {
        margin-bottom: 0
    }

    .tl-date {
        font-size: .85em;
        margin-top: 2px;
        min-width: 100px;
        max-width: 100px
    }

    .avatar {
        position: relative;
        line-height: 1;
        border-radius: 500px;
        white-space: nowrap;
        font-weight: 700;
        border-radius: 100%;
        display: -ms-flexbox;
        display: flex;
        -ms-flex-pack: center;
        justify-content: center;
        -ms-flex-align: center;
        align-items: center;
        -ms-flex-negative: 0;
        flex-shrink: 0;
        border-radius: 500px;
        box-shadow: 0 5px 10px 0 rgba(50, 50, 50, .15)
    }

    .b-warning {
        border-color: #f4c414 !important;
    }

    .b-primary {
        border-color: #448bff !important;
    }

    .b-danger {
        border-color: #f54394 !important;
    }

    .card-block label {
        font-size: 16px; 
    }

</style>
<div class="card">
    <div class="card-header">
        <label><b>Detail Surat Tugas</b></label>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-lg-4">
                <label><b>Nama Kegiatan</b></label><br />
                <label>@Html.DisplayFor(model => model.Namakegiatan)</label>
                <br />
                <br />

                <label><b>Bukti Pendukung</b></label><br />
                <label>
                    @if (!string.IsNullOrEmpty(Model.Namafile))
                    {
                        <a asp-action="Download" asp-route-fileName="@Model.Namafile">@Model.Namafile</a>
                    }
                </label>
                <br />
                <br />

                <label><b>Keterangan</b></label><br />
                <label>
                    @if (keterangan == null)
                    {
                        <span>tidak ada</span>
                    }
                    else
                    {
                        <span>@keterangan</span>
                    }
                </label>
                <br />
                <br />
            </div>
            <div class="col-lg-4">
                <label><b>Masa Pelaksanaan</b></label><br />
                <label>@Html.DisplayFor(model => model.Masapelaksanaan)</label>
                <br />
                <br />

                <label><b>Status</b></label><br />
                <label>
                    @if (status == 0)
                    {
                        <span>belum diajukan</span>
                    }
                    else if (status == 1)
                    {
                        <span>Menunggu Konfirmasi</span>
                    }
                    else if (status == 2)
                    {
                        <span>Diterima</span>
                    }
                    else if (status == 3)
                    {
                        <span>Ditolak</span>
                    }
                </label>
                <br />
                <br />
                <label><b>Surat Tugas</b></label><br />
                <label>
                    @if (!string.IsNullOrEmpty(Model.Namafilesurat))
                    {
                        <a asp-action="Download" asp-route-fileName="@Model.Namafilesurat">@Model.Namafilesurat</a>
                    }
                    else
                    {
                        <span>Tidak ada Surat tugas</span>
                    }
                </label>
                <br />
                <br />
            </div>
            <div class="col-lg-4">
                <div class="card-block">
                    <div class="timeline">
                            <div class="tl-item">
                                <div class="tl-dot b-primary"></div>
                                <div class="tl-content">
                                    <p>Pengajuan Surat Tugas</p>
                                    <span class="tl-date text-muted mt-1">@Html.DisplayFor(model => model.Inputdate)</span>
                                </div>
                            </div>
                            <div class="tl-item">
                                <div class="tl-dot b-primary"></div>
                                <div class="tl-content">
                                    @if (Model.Status == 2)
                                    {
                                        <p>Pengajuan Surat Tugas Diterima</p>
                                        <span class="timeline-date">@Html.DisplayFor(model => model.Editdate)</span>
                                    }
                                    else if (Model.Status == 1)
                                    {
                                        <p>Belum Dikonfirmasi</p>
                                    }
                                    else
                                    {
                                        <p>Belum Diajukan</p>
                                    }
                                </div>
                            </div>
                        @if (Model.Status == 2 && Model.tanggalselesai != null)
                        {
                            <div class="tl-item">
                                <div class="tl-dot b-primary"></div>
                                <div class="tl-content">
                                    <p>Surat Tugas Diupload</p>
                                    <span class="tl-date text-muted mt-1">@Html.DisplayFor(model => model.tanggalselesai)</span>
                                </div>
                            </div>
                        }
                        else
                        {

                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary float-left">Ubah</a>
            <a asp-action="Index" class="btn btn-secondary float-right">Back to List</a>
        </div>
    </div>
</div>

