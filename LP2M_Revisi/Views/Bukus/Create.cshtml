@model LP2M_Revisi.Models.Buku

@{
    ViewData["Title"] = "Tambah Buku";
    ViewData["Routing"] = "Buku";
    ViewData["Routing2"] = "Tambah Buku";
    ViewData["Routing2"] = "Tambah Surat Tugas";
}

<h1>Tambah</h1>

<h4>Buku</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" value="@Model.Id"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Judulbuku" class="control-label">Judul</label>
                <input asp-for="Judulbuku" class="form-control" />
                <span asp-validation-for="Judulbuku" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Isbn" class="control-label">ISBN</label>
                <input asp-for="Isbn" class="form-control" />
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Penerbit" class="control-label">Penerbit</label>
                <input asp-for="Penerbit" class="form-control" />
                <span asp-validation-for="Penerbit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tahun" class="control-label"></label>
                <input asp-for="Tahun" class="form-control" />
                <span asp-validation-for="Tahun" class="text-danger"></span>
            </div>
            <!-- Tambahkan select option dan tombol "Tambah Pengguna" -->
            <div class="form-group">
                <label for="listPengguna" class="control-label">Pilih Pengguna</label>
                <!-- Gunakan data pengguna yang dikirim dari controller untuk membuat dropdown -->
                <select id="listPengguna" asp-items="@ViewBag.ListPengguna" class="form-control">
                </select>
                <a id="btnTambahPengguna" class="btn btn-secondary">Tambah Pengguna</a>
            </div>

            <!-- Tambahkan textarea untuk menampilkan data pengguna yang dipilih -->
            <div class="form-group">
                <label for="selectedUsers" class="control-label">Data Pengguna yang Dipilih</label>
                <textarea id="selectedUsers" class="form-control" rows="4" readonly></textarea>
            </div>
            <!-- Tambahkan input tersembunyi untuk menyimpan pengguna yang dipilih -->
            <input type="hidden" id="selectedPenggunas" name="selectedPenggunas" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<!-- Tambahkan input tersembunyi untuk menyimpan pengguna yang dipilih -->
<input type="hidden" id="selectedPenggunas" name="selectedPenggunas" />

<!-- Sisipkan kode JavaScript yang diperbarui -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        var selectedPenggunas = []; // Array untuk menyimpan pengguna yang dipilih

        // Logika JavaScript untuk menambahkan pengguna ke array selectedPenggunas
        document.getElementById('btnTambahPengguna').addEventListener('click', function () {
            var selectedUser = document.getElementById('listPengguna').value;
            var selectedUserName = document.getElementById('listPengguna').options[document.getElementById('listPengguna').selectedIndex].text;

            var isAlreadySelected = selectedPenggunas.some(function (user) {
                return user.id === selectedUser;
            });

            if (!isAlreadySelected) {
                selectedPenggunas.push({ id: selectedUser, name: selectedUserName });

                var textarea = document.getElementById('selectedUsers');
                textarea.value += selectedUserName + ' (ID: ' + selectedUser + ')\n';

                document.getElementById('listPengguna').querySelector('option[value="' + selectedUser + '"]').disabled = true;
            } else {
                alert('Pengguna sudah dipilih sebelumnya.');
            }

            // Update nilai input tersembunyi sebelum form disubmit
            document.getElementById('selectedPenggunas').value = JSON.stringify(selectedPenggunas.map(user => user.id));
            console.log(document.getElementById('selectedPenggunas').value);
        });

        // Handle submission form
        
    </script>
}


