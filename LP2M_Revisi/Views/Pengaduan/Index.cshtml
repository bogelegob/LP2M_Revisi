<div class="row mb-3">
    <div class="col-12 col-md-1">
   
            <button class="btn btn-sm btn-danger tolak-button" data-id="@ViewBag.pengguna">
                <i class="fa fa-times"></i>
            </button>
        
    </div>
    <div class="col-12 col-md-8">
        <div class="input-group">
            <input id="cari" type="text" class="form-control" placeholder="Cari">
            <div class="input-group-append">
                <button class="btn btn-primary" type="button">
                    <i class="fa fa-search"></i>&nbsp;Cari
                </button>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-3">
        <div class="input-group">
            <select class="form-control" id="filter">
                <option value="all">Semua Kategori</option>
                <option value="Tahun">Tahun</option>
                <option value="Prodi">Prodi</option>
                <option value="Judul">Judul</option>
            </select>
            <div class="input-group-append">
                <button class="btn btn-primary" type="button">
                    <i class="fa fa-filter"></i>&nbsp;Filter
                </button>
            </div>
        </div>
    </div>
</div>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["SuccessMessage"]
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["ErrorMessage"]
    </div>
}
<div style="overflow-x: auto; width: 100%;">
    <table id="myTable" class="table table-hover grid scrollstyle text-center" width="100%">
        <thead>
        <tr>
            <th>
                Nama Kegiatan
            </th>
            <th>
                Status
            </th>
            <th>
                Tanggal Dibuat
            </th>
            <th>
                Tanggal Dikonfirmasi
            </th>
            <th>
                Dibuat Oleh
            </th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if(item.buku != null)
                {
                    <span>Buku</span>
                }
                else if(item.prosiding != null)
                {
                    <span>Prosiding</span>
                }
                else if(item.jurnal != null)
                {
                    <span>Jurnal</span>
                }
                else if(item.seminar != null)
                {
                    <span>Seminar</span>
                }
                else if(item.hakcipta != null)
                {
                    <span>Hak Cipta</span>
                }
                else if(item.hakpaten != null)
                {
                    <span>Hak Paten</span>
                }
                else if(item.pengabdian != null)
                {
                    <span>Pengabdian</span>
                }
            </td>
            <td>
                @if(item.Status == 0)
                {
                    <span>belum diajukan</span>
                }
                else if(item.Status == 1)
                {
                    <span>Menunggu Konfirmasi</span>
                }
                else if(item.Status == 2)
                {
                    <span>Diterima</span>
                }
                else if(item.Status == 3)
                {
                    <span>Ditolak</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.updatedate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PenggunaNavigation.Nama)
            </td>
            <td>
                @if (item.Status == 0)
                {
                            <button class="btn btn-sm btn-success kirim-button" data-id="@item.Id">
                                <i class="fa fa-paper-plane"></i>
                            </button>
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                <i class="fa fa-pencil-square-o"></i>
                            </a>
                            <a class="btn btn-sm btn-info btn-info-modal" asp-action="Details" asp-route-id="@item.Id" title="Detail">
                                <i class="fa fa-info-circle"></i>
                            </a>
                            <a class="btn btn-sm btn-danger delete-button" asp-action="Delete" asp-route-id="@item.Id" title="Hapus">
                                <i class="fa fa-trash-o"></i>
                            </a>
                            <button class="btn btn-sm btn-danger tolak-button" data-id="@item.pengguna">
                                <i class="fa fa-times"></i>
                            </button>
                }
                else
                {
                            <a class="btn btn-sm btn-info btn-info-modal" asp-action="Details" asp-route-id="@item.Id" title="Detail">
                                <i class="fa fa-info-circle"></i>
                            </a>
                }             
           </td>
        </tr>
}
    </tbody>
</table>
</div>
<!-- Add this modal structure at the end of your HTML -->
<div class="modal fade" id="tolakModal" tabindex="-1" role="dialog" aria-labelledby="tolakModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tolakModalLabel">Tambah Pengaduan - Masukkan Pengaduan</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="alasan">Jenis Pengaduan:</label>
                    <select class="form-control" id="jenispengaduan">
                        <option value="">Pilih Jenis</option>
                        <option value="edit">Edit</option>
                        <option value="hapus">Hapus</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="alasan">Pengaduan Data:</label>
                    <select class="form-control" id="datapengaduan">
                        <option value="">Pilih Pengaduan</option>
                        <option value="pengabdian">Pengabdian</option>
                        <option value="prosiding">Prosiding</option>
                        <option value="buku">Buku</option>
                        <option value="jurnal">Jurnal</option>
                        <option value="seminar">Seminar</option>
                        <option value="hakcipta">Hak Cipta</option>
                        <option value="hakpaten">Hak Paten</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="alasan">Data Mana :</label>
                    <select class="form-control" id="databro">
                        <option value="">Pilih Data</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="alasan">Alasan Pengaduan:</label>
                    <textarea class="form-control" id="alasan" rows="4"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="tolakBatal">Batal</button>
                <button type="button" class="btn btn-danger" id="tolakSubmit">Buat</button>
            </div>
        </div>
    </div>
</div>

<script>
    // Fungsi untuk menghitung total data dalam tabel
    function updateTotalData() {
        var totalDataElement = document.getElementById("totalData");
        var table = document.getElementById("myTable"); // Ganti "myTable" dengan id tabel yang sesuai
        var rowCount = table.rows.length - 1; // Mengurangi 1 untuk mengabaikan baris header

        totalDataElement.textContent = rowCount;
    }

    function searchTable() {
        var input, filter, table, tr, td, i, j, txtValue;
        input = document.getElementById("cari");
        filter = input.value.toUpperCase();
        table = document.getElementById("myTable");
        tr = table.getElementsByTagName("tr");

        for (i = 1; i < tr.length; i++) { // Mulai dari 1 untuk menghindari baris header
            var display = false;
            for (j = 0; j < tr[i].cells.length; j++) {
                td = tr[i].cells[j];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        display = true;
                        break;
                    }
                }
            }
            if (display) {
                tr[i].style.display = "";
            } else {
                tr[i].style.display = "none";
            }
        }
    }

    $(document).ready(function () {
        // Initialize DataTable
        var table = $('#myTable').DataTable({
            "pageLength": 10,
            "lengthMenu": [10, 25, 50, 75, 100],
            "searching": false,
            "ordering": false,
        });

        // Call the updateTotalData function whenever the table is drawn
        table.on('draw', function () {
            updateTotalData();
        });
    });

    // Panggil fungsi saat halaman dimuat
    window.addEventListener('load', updateTotalData);

    // Panggil fungsi pencarian saat input berubah
    var searchInput = document.getElementById("cari");
    searchInput.addEventListener("input", searchTable);

    $(document).ready(function () {
        $(".alert").on("click", ".close", function (e) {
            $(this).parent().hide();
        });

        $(".kirim-button").click(function () {
            var anggotaId = $(this).data("id");
            console.log(anggotaId);

            Swal.fire({
                title: "Kirim Surat?",
                text: "Apakah Anda yakin ingin mengirim surat ini?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Ya, Kirim!",
                cancelButtonText: "Batal"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/Pengaduan/KirimConfirm/" + anggotaId,
                        type: "POST",
                        success: function (data) {
                            if (data.success) {
                                Swal.fire("Sukses!", data.message, "success");
                                location.reload();
                            } else {
                                Swal.fire("Gagal!", data.message, "error");
                            }
                        },
                        error: function () {
                            Swal.fire("Error!", "Terjadi kesalahan saat menghapus Laptop.", "error");
                        }
                    });
                }
            });
        });


        $(".tolak-button").click(function () {
            var anggotaId = $(this).data("id");

            // Tampilkan Modal Tolak
            $("#tolakModal").modal("show");
            $("#tolakBatal").click(function () {
                $("#tolakModal").modal("hide");

                // Reset nilai textarea
                $("#alasan").val('');
            });

            // Tangani Tombol Tolak di dalam Modal
            $("#tolakSubmit").off("click").on("click", function () {
                var jenis = $("#jenispengaduan").val();
                var tipe = $("#datapengaduan").val();
                var databro = $("#databro").val();
                var alasan = $("#alasan").val();
                console.log(jenis);
                console.log(tipe);
                console.log(databro);
                console.log(alasan);

                if (!alasan) {
                    Swal.fire("Peringatan!", "Masukkan alasan Pengaduan.", "warning");
                    return;
                }

                // Tutup modal
                $("#tolakModal").modal("hide");

                // Reset nilai textarea
                $("#alasan").val('');


                // Lakukan aksi Tolak
                $.ajax({
                    url: "/Pengaduan/Create/",
                    type: "POST",
                    data: {
                        jenis: tipe,
                        hakpaten: databro,
                        hakcipta: databro,
                        jurnal: databro,
                        buku: databro,
                        prosiding: databro,
                        pengabdian: databro,
                        seminar: databro,
                        alasan: alasan
                    },
                    success: function (data) {
                        if (data.success) {
                            Swal.fire("Sukses!", data.message, "success");
                            location.reload();
                        } else {
                            Swal.fire("Gagal!", data.message, "error");
                        }
                    },
                    error: function () {
                        Swal.fire("Error!", "Terjadi kesalahan saat menyetujui Surat.", "error");
                    }
                });
            });

            // Tangani perubahan pada select "jenispengaduan"
            $("#datapengaduan").change(function () {
                var selectedPengaduan = $(this).val();
                var selectedId = anggotaId;// Ambil nilai ID yang sesuai dari suatu tempat (misalnya, dari elemen tertentu)
                
                    // Lakukan AJAX untuk mengambil data berdasarkan jenis pengaduan
                    $.ajax({
                        url: "/Pengaduan/GetData?id=" + selectedId + "&pengaduan=" + selectedPengaduan,
                        type: "GET",
                        success: function (data) {
                        
                            // Kosongkan select "datapengaduan" sebelum mengisinya kembali
                        $("#databro").empty();

                            // Isi kembali select "datapengaduan" dengan data yang diperoleh dari controller
                            

                            if (data && data.length > 0) {
                                $.each(data, function (index, item) {
                                $("#databro").append('<option value="' + item.id + '">' + item.nama + '</option>');
                                });
                            } else {
                            $("#databro").append('<option value="">Tidak ada data</option>');
                            }
                        },
                        error: function () {
                            Swal.fire("Error!", "Terjadi kesalahan saat mengambil data.", "error");
                        }
                    });
            });
        });
    });
    $(document).ready(function () {
        $(".alert").on("click", ".close", function (e) {
            $(this).parent().hide();
        });
    });
</script>


